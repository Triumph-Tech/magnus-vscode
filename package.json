{
  "name": "magnus",
  "displayName": "Magnus",
  "publisher": "triumph-tech",
  "description": "",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/triumph-tech/magnus-vscode.git"
  },
  "engines": {
    "vscode": "^1.69.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:magnus-servers",
    "onFileSystem:ttmagnus",
    "onCommand:magnus.addServer"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "magnus.addServer",
        "title": "Add Server",
        "category": "Magnus",
        "icon": "$(add)"
      },
      {
        "command": "magnus.removeServer",
        "title": "Remove Server",
        "category": "Magnus",
        "icon": "$(trash)"
      },
      {
        "command": "magnus.refreshFolder",
        "title": "Refresh",
        "category": "Magnus",
        "icon": "$(refresh)"
      },
      {
        "command": "magnus.refreshFile",
        "title": "Refresh",
        "category": "Magnus",
        "icon": "$(cloud)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "magnus",
          "title": "Magnus",
          "icon": "resources/magnus.svg"
        }
      ]
    },
    "views": {
      "magnus": [
        {
          "id": "magnus-servers",
          "name": "Servers",
          "type": "tree"
        },
        {
          "id": "magnus-about",
          "name": "Help and Documentation",
          "type": "webview"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "magnus-servers",
        "contents": "You don't have any saved servers.\n[Add Server](command:magnus.addServer)"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "magnus.refreshFolder",
          "when": "false"
        },
        {
          "command": "magnus.refreshFile",
          "when": "false"
        },
        {
          "command": "magnus.removeServer",
          "when": "false"
        }
      ],
      "view/title": [
        {
          "command": "magnus.addServer",
          "group": "navigation",
          "when": "view == magnus-servers"
        }
      ],
      "view/item/context": [
        {
          "command": "magnus.removeServer",
          "group": "section1",
          "when": "view == magnus-servers && viewItem =~ /^server_/"
        },
        {
          "command": "magnus.refreshFolder",
          "group": "section9",
          "when": "view == magnus-servers && viewItem =~ /^server_/"
        },
        {
          "command": "magnus.refreshFolder",
          "group": "section9",
          "when": "view == magnus-servers && viewItem =~ /^folder_/"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.69.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "axios": "0.27.2",
    "keytar": "^7.9.0"
  }
}
